@{
    ViewData["Title"] = "BackOffice";
}

<h1>BackOffice</h1>

<div class="row">
    <div class="col-sm-6 mb-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gestione Ordini</h5>
                <a asp-action="Index" asp-controller="Ordine" class="btn btn-brown-100 fs-5 fw-semibold">Ordini</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 mb-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gestisci Ingredienti</h5>
                <a asp-action="Index" asp-controller="Ingrediente" class="btn btn-brown-100 fs-5 fw-semibold">Ingredienti</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 mb-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gestisci Prodotti</h5>
                <a asp-action="Index" asp-controller="Prodotto" class="btn btn-brown-100 fs-5 fw-semibold">Prodotti</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 mb-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Gestione ingredienti prodotti</h5>
                <a asp-action="Index" asp-controller="IngredienteAggiunto" class="btn btn-brown-100 fs-5 fw-semibold">Ingredienti Aggiunti</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 mb-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Operazioni Asincrone</h5>
                <a asp-action="FetchPage" asp-controller="Home" class="btn btn-brown-100 fs-5 fw-semibold">Fetch</a>
            </div>
        </div>
    </div>
    
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {


        });
    </script>
}