@model IEnumerable<Pizzeria.Models.Ordine>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Ordini</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IndirizzoDiConsegna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataOrdine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEvaso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IndirizzoDiConsegna)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOrdine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEvaso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utente.Password)
            </td>
            <td>
                <a asp-action="ToggleIsEvaso" class="btn btn-teal-800" asp-route-id="@item.IdOrdine">ToggleIsEvaso</a> 
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.IdOrdine">Details</a>

                <a asp-action="Edit" class="text-white" asp-route-id="@item.IdOrdine">Edit</a> |
                <a asp-action="Delete" class="text-white" asp-route-id="@item.IdOrdine">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
