@model IEnumerable<Pizzeria.Models.Prodotto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Prodotti</h1>

<p>
    <a class="btn btn-brown-100 fs-5 fw-semibold" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeProdotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgProdotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrezzoProdotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoConsegna)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProdotto)
            </td>
            <td>
                    <img class="thumb" src="@item.ImgProdotto" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrezzoProdotto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoConsegna)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProdotto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProdotto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProdotto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
